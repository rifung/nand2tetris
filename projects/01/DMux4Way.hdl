/**
 * 4-way demultiplexor:
 * {a, b, c, d} = {in, 0, 0, 0} if sel == 00
 *                {0, in, 0, 0} if sel == 01
 *                {0, 0, in, 0} if sel == 10
 *                {0, 0, 0, in} if sel == 11
 */

CHIP DMux4Way {
    IN in, sel[2];
    OUT a, b, c, d;

    PARTS:
    // we name sel[1] = b, sel[0] = c
    Not(in=sel[0], out=notSel0);
    Not(in=sel[1], out=notSel1);

    And(a=in, b=notSel1, out=aNotB);
    And(a=in, b=sel[1], out=ab);
    
    And(a=aNotB, b=notSel0, out=a);
    And(a=aNotB, b=sel[0], out=b);
    And(a=ab, b=notSel0, out=c);
    And(a=ab, b=sel[0], out=d);
}
